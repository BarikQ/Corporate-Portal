{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": false,
  "watch": ["./source", "./package.json", "./.env", "./nodemon.json"],
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node -r dotenv/config --es-module-specifier-resolution=node ./source/index.js",
  "ext": "js"
}
